<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StaffHome"
    android:orientation="vertical"
    android:weightSum="3"
    android:elevation="50dp"
    android:background="#E4E1E1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_margin="25dp"
    android:background="@drawable/optionsbg"
    android:onClick="customersClick"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customers"
        android:textColor="#C96515"
        android:onClick="viewproductsClick"
        android:textSize="30sp"
        android:fontFamily="@font/chunkfive"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="25dp"
        android:background="@drawable/optionsbg"
        android:onClick="scanQrClick"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR"
            android:textColor="#3F51B5"
            android:textSize="30sp"
            android:fontFamily="@font/chunkfive"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="25dp"
        android:elevation="50dp"
        android:background="@drawable/optionsbg"
        android:onClick="invoiceClick"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoices"
            android:textColor="#009688"
            android:textSize="30sp"
            android:fontFamily="@font/chunkfive"/>
    </LinearLayout>

</LinearLayout>