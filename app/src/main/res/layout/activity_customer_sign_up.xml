<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/customerbg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Name:"
                android:textColor="#fff"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:hint="Name..."
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="Email:"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white_text"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:hint="Email..."
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="#fff"
                android:textSize="20sp" />
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="Contact:"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white_text"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:hint="Contact no..."
                android:inputType="phone"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/white_text"
                android:textSize="20sp" />
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="Password:"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white_text"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_pswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:hint="Password..."
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/white_text"
                android:textSize="20sp" />
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="Confirm Password:"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white_text"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_cfm_pswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:hint="Confirm Password..."
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/white_text"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_press_new"
                android:gravity="center"
                android:padding="10dp"
                android:text="Signup"
                android:textColor="@color/white_text"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/txt_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#4CAF50"
                android:gravity="center"
                android:text="Already have an account? Please Login"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white_text"
                android:layout_marginBottom="10dp"
                android:text="By signing up,you have to agree the Terms and Conditions and Privacy Policy of the app">

            </TextView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>







