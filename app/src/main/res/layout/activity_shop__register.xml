<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/greybg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Shop Name:"
                android:textColor="#fff"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sreg_shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20sp" />
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:text="Owner Name:"
                android:layout_marginBottom="5dp"
                android:textColor="#fff"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sreg_ownername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"

                android:padding="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20sp" />
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:layout_marginBottom="5dp"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/sreg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20sp" />
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="Phone"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:textColor="@color/white_text" />

            <EditText
                android:id="@+id/sreg_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="#fff"
                android:textSize="20sp" />
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="Licence Number"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white_text"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/sreg_licence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="#fff"
                android:textSize="20sp" />
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="Address:"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white_text"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sreg_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/white_text"
                android:textSize="20sp" />
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="District:"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white_text"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sreg_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:padding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/white_text"
                android:textSize="20sp" />
            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="Password:"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white_text"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sreg_pswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_border_new"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/colorwhite"
                android:textColorHint="@color/white_text"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_press_new"
                android:gravity="center"
                android:onClick="signupClick"
                android:padding="10dp"
                android:text="Signup"
                android:textColor="@color/white_text"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/txt_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#4CAF50"
                android:gravity="center"
                android:text="Already have an account? Please Login"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white_text"
                android:layout_marginBottom="10dp"
                android:text="By signing up,you have to agree the Terms and Conditions and Privacy Policy of the app">

            </TextView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>







